N=1000

a = 0
b = 0
c = 0

found = false

b = N / 2
while b > 1:
  a = b
  while a > 1:
    c = 1000 - (a + b)
    if a^2 + b^2 == c^2:
      found = true
      break
    a = a - 1
  if found: break
  b = b - 1

print("a: " + a + ", b: " + b + ", c: " + c + "\n")
answer = a * b * c
print("Answer is: " + answer + "\n")
