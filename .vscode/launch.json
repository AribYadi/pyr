  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'pyr' with subcommand 'run'",
      "cargo": {
        "args": ["build", "--bin=pyr", "--package=pyr"],
        "filter": {
          "name": "pyr",
          "kind": "bin"
        }
      },
      "args": ["run", "${workspaceFolder}/examples/functions.pyr"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'pyr' with subcommand 'compile'",
      "cargo": {
        "args": ["build", "--bin=pyr", "--package=pyr"],
        "filter": {
          "name": "pyr",
          "kind": "bin"
        }
      },
      "args": ["compile", "${workspaceFolder}/tests/func_scope.pyr"],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'pyr'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=pyr", "--package=pyr"],
        "filter": {
          "name": "pyr",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "python",
      "request": "launch",
      "name": "Debug e2e tests",
      "program": "${workspaceFolder}/test.py"
    }
  ]
}
